{
  "name": "delete-branch",
  "description": "Deletes a branch in a GitHub repository",
  "version": "0.1.0",
  "author": "David HÃ¶rnmark",
  "type": "module",
  "private": true,
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:fix && npm run lint:fix && npm run package",
    "ci-test": "echo \"No tests..\" ; exit 0",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:fix": "npx prettier --write .",
    "format": "npx prettier --check .",
    "lint": "npx eslint . -c ./.github/linters/.eslintrc.yml",
    "lint:fix": "npx eslint . -c ./.github/linters/.eslintrc.yml --fix",
    "package": "npx ncc build src/index.js -o dist --source-map --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "test": "echo \"No tests..\" ; exit 0",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package"
  },
  "license": "MIT",
  "eslintConfig": {
    "extends": "./.github/linters/.eslintrc.yml"
  },
  "jest": {
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@octokit/core": "^6.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/eslint-parser": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@vercel/ncc": "^0.38.1",
    "babel-preset-jest": "^29.6.3",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^5.0.1",
    "eslint-plugin-jest": "^28.6.0",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.3.2"
  }
}
